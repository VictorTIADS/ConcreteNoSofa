<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/ralewaylight</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextSubtitle" >
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextTitleBlack">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginStart">@dimen/space_m</item>
        <item name="android:layout_marginEnd">@dimen/space_m</item>
        <item name="android:layout_marginTop">@dimen/space_pp</item>
        <item name="android:layout_marginBottom">@dimen/space_pp</item>
        <item name="android:fontFamily">@font/ralewaybold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextWeatherTemp">
        <item name="android:textSize">170sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/ralewaybold</item>
    </style>

    <style name="TextWeatherTempFormat">
        <item name="android:textSize">72sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/ralewaylight</item>
    </style>

</resources>
